<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="Theme">
        <attr name="textColorPrimary" format="color" />
        <attr name="textColorSecondary" format="color" />
        <attr name="textColorTertiary" format="color" />
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="Theme.TestApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->

        <item name="textColorPrimary">?android:attr/textColorPrimary</item>
        <item name="textColorSecondary">?android:attr/textColorSecondary</item>
        <item name="textColorTertiary">?android:attr/textColorTertiary</item>

        <!--Toolbar-->
        <item name="actionMenuTextColor">#d32f2f</item>
    </style>

    <style name="Theme.TestApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TestApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TestApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>